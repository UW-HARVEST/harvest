{
    "name": "translations",
    "schema": {
        "type": "object",
        "properties": {
            "translations": {
                "type": "object",
                "additionalProperties": {
                    "type": "object",
                    "properties": {
                        "rust_code": { "type": "string" },
                        "dependencies": {
                            "type": "array",
                            "items": { "type": "string" }
                        }
                    },
                    "required": ["rust_code", "dependencies"]
                }
            },
            "cargo_toml": {
                "type": "string"
            }
        },
        "required": ["translations", "cargo_toml"]
    }
}
